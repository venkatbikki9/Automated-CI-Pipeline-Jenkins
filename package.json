{
  "name": "automated-ci-pipeline-jenkins",
  "version": "1.0.0",
  "description": "A demo project showing how to build an automated CI pipeline for a Node.js web app using Jenkins.",
  "main": "src/app.js",
  "directories": {
    "doc": "docs",
    "test": "tests"
  },
  "scripts": {
    "start": "node src/app.js",
    "build": "mkdir -p build && cp -r src/* build/ && zip -r build/artifact.zip build || true",
    "test": "jest --ci --reporters=default --reporters=jest-junit",
    "lint": "eslint src || true"
  },
  "keywords": [
    "jenkins",
    "ci-cd",
    "pipeline",
    "automation",
    "nodejs",
    "jest"
  ],
  "author": "Venkat sai",
  "license": "ISC",
  "devDependencies": {
    "eslint": "^9.38.0",
    "jest": "^30.2.0",
    "jest-junit": "^16.0.0"
  },
  "jest-junit": {
    "outputDirectory": "./tests",
    "outputName": "test-results.xml",
    "suiteName": "Jest Tests",
    "classNameTemplate": "{classname} - {title}",
    "titleTemplate": "{title}",
    "ancestorSeparator": " â€º ",
    "usePathForSuiteName": "true"
  }
}
